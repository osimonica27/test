# AFFiNE deployment revision
AFFINE_REVISION=stable

# Server port and host configuration
PORT=3010
# Uncomment and set these for production with a domain
# AFFINE_SERVER_HTTPS=true
# AFFINE_SERVER_HOST=affine.yourdomain.com
# AFFINE_SERVER_EXTERNAL_URL=https://affine.yourdomain.com

# Persistence locations
DB_DATA_LOCATION=~/.affine/self-host/postgres/pgdata
UPLOAD_LOCATION=~/.affine/self-host/storage
CONFIG_LOCATION=~/.affine/self-host/config

# Database configuration
DB_USERNAME=affine
DB_PASSWORD=your_secure_postgres_password
DB_DATABASE=affine
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@postgres:5432/${DB_DATABASE}

# Redis configuration
REDIS_SERVER_HOST=redis

# AI Services API Keys
COPILOT_OPENAI_API_KEY=your_openai_api_key_here
COPILOT_OLLAMA_API_URL=http://host.docker.internal:11434
# Other optional AI services
# COPILOT_FAL_API_KEY=your_fal_api_key_here
# COPILOT_PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Uncomment for email configuration if needed
# MAILER_HOST=smtp.yourmailservice.com
# MAILER_PORT=587
# MAILER_SENDER="noreply@yourdomain.com"
# MAILER_USER="noreply@yourdomain.com"
# MAILER_PASSWORD="your_mail_password"
# MAILER_SECURE=true
